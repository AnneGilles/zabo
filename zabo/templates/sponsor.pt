<!DOCTYPE html>
<html lang="${request.locale_name}"
      metal:use-macro="base_bootstrap"
      i18n:domain="zabo">
  <tal:block metal:fill-slot="middle">
    <div class="row"
         tal:condition="invalid">
      <div class="alert alert-warning">
	<h1 i18n:translate="">This link code is invalid.</h1>
	<a href="${request.route_url('sponsor_image',linkcode='invalid')}">
          <img src="${request.route_url('sponsor_image',linkcode='invalid')}"/>
	</a>
      </div>
    </div>
    <div class="row"
         tal:condition="not invalid and abo">
      <div class="alert alert-success">
	<h1>
	  <small i18n:translate="">Contribution by</small>
          ${abo.name}
	</h1>
	<a href="${request.route_url('sponsor_image',linkcode=abo.linkcode)}">
          <img src="${request.route_url('sponsor_image',linkcode=abo.linkcode)}"/>
        </a>
      </div>
    </div>
  </tal:block>
</html>
